{% extends 'base.html' %}
{% load static %}

{% block title %}Solicitudes - Sistema PESCO{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div>
        <h1 class="h2">
            <i class="bi bi-clipboard-check me-2"></i>
            Solicitudes
        </h1>
        <p class="text-muted mb-0">Control centralizado de solicitudes ingresadas.</p>
    </div>
    {% if es_admin %}
    <a href="{% url 'solicitudes:crear' %}" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Nueva Solicitud
    </a>
    {% endif %}
 </div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Estado</label>
                <select name="estado" class="form-select">
                    <option value="">Todos</option>
                    {% for value, label in estados %}
                        <option value="{{ value }}" {% if estado == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Tipo</label>
                <select name="tipo" class="form-select">
                    <option value="">Todos</option>
                    {% for value, label in tipos %}
                        <option value="{{ value }}" {% if tipo == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Urgente</label><br>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" name="urgente" value="1" {% if urgente == '1' %}checked{% endif %}>
                    <label class="form-check-label">Solo urgentes</label>
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label">Buscar</label>
                <input type="text" name="q" value="{{ busqueda }}" class="form-control" placeholder="Cliente, código, descripción">
            </div>
            <div class="col-md-1 text-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Tabla -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Tipo</th>
                        <th>Pedido / ST</th>
                        <th>Cliente</th>
                        <th>Códigos</th>
                        <th>Estado</th>
                        <th>Urgente</th>
                        <th>Transporte</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for solicitud in page_obj %}
                    <tr>
                        <td><strong>#{{ solicitud.id }}</strong></td>
                        <td>{{ solicitud.fecha_solicitud|date:"d/m/Y" }}</td>
                        <td>{{ solicitud.hora_solicitud|time:"H:i" }}</td>
                        <td>{{ solicitud.get_tipo_display }}</td>
                        <td>
                            {# Número de pedido o ST (sin prefijo de tipo para pedidos) #}
                            {% if solicitud.tipo == 'ST' and solicitud.numero_st %}
                                {{ solicitud.numero_st }}
                            {% elif solicitud.numero_pedido %}
                                {{ solicitud.numero_pedido }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{{ solicitud.cliente }}</td>
                        <td>{{ solicitud.total_codigos }}</td>
                        <td>
                            <span class="badge bg-{{ solicitud.color_estado }}">
                                {{ solicitud.get_estado_display }}
                            </span>
                        </td>
                        <td>
                            {% if solicitud.urgente %}
                                <span class="badge bg-danger">
                                    <i class="bi bi-exclamation-triangle"></i> Sí
                                </span>
